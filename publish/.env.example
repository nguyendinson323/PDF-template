# ========================================
# Server Configuration
# ========================================
PORT=8080
NODE_ENV=development

# ========================================
# AWS S3 Configuration
# ========================================
AWS_REGION=us-east-1
S3_BUCKET=passfy-docs-bucket

# Set to true for local development (uses filesystem instead of AWS)
S3_USE_LOCAL=true
S3_LOCAL_PATH=./s3-local

# ========================================
# AWS KMS (for SSE-KMS encryption)
# ========================================
KMS_KEY_ID=alias/passfy-docs-key

# ========================================
# TSA (Time Stamp Authority) Configuration
# ========================================
# Production TSA URL (e.g., https://freetsa.org/tsr)
TSA_URL=https://freetsa.org/tsr

# Set to true to use mock TSA for development/testing
TSA_USE_MOCK=true

# ========================================
# Template Pack Configuration
# ========================================
# Path to the template folder containing Manifest.json, HeaderFooter.json, fonts, etc.
TEMPLATE_PATH=../template

# ========================================
# Authentication Configuration
# ========================================
# Set to false to disable authentication (development only)
AUTH_ENABLED=false

# Bearer token for simple authentication
AUTH_BEARER_TOKEN=TEST

# ========================================
# Logging Configuration
# ========================================
# Log level: debug, info, warn, error
LOG_LEVEL=debug
