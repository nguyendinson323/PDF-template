{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://passfy.com/schemas/manifest.schema.json",
  "title": "Cover Page Manifest Schema",
  "description": "Defines dynamic field positioning for PDF cover generation",
  "type": "object",
  "required": ["version", "page", "fonts", "content"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the manifest"
    },
    "page": {
      "type": "object",
      "required": ["width", "height", "unit"],
      "properties": {
        "width": {
          "type": "number",
          "minimum": 0
        },
        "height": {
          "type": "number",
          "minimum": 0
        },
        "unit": {
          "type": "string",
          "enum": ["point", "inch", "mm"]
        },
        "margins": {
          "type": "object",
          "properties": {
            "top": { "type": "number" },
            "bottom": { "type": "number" },
            "left": { "type": "number" },
            "right": { "type": "number" }
          }
        }
      }
    },
    "fonts": {
      "type": "object",
      "required": ["regular", "bold"],
      "properties": {
        "regular": {
          "type": "string"
        },
        "bold": {
          "type": "string"
        }
      }
    },
    "content": {
      "type": "object",
      "required": ["tables"],
      "properties": {
        "tables": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "type"],
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string" },
              "margin_top": { "type": "number" },
              "title": {
                "type": "object",
                "properties": {
                  "text": { "type": "string" },
                  "height": { "type": "number" },
                  "text_size": { "type": "number" },
                  "align": { "type": "string" }
                }
              },
              "header": {
                "type": "object",
                "properties": {
                  "height": { "type": "number" },
                  "text_size": { "type": "number" },
                  "columns": {
                    "type": "array",
                    "items": { "type": "object" }
                  }
                }
              },
              "rows_config": {
                "type": "object",
                "properties": {
                  "height": { "type": "number" },
                  "text_size": { "type": "number" },
                  "columns": {
                    "type": "array",
                    "items": { "type": "object" }
                  }
                }
              },
              "rows": {
                "type": "array",
                "items": { "type": "object" }
              },
              "blocks": {
                "type": "array",
                "items": { "type": "object" }
              }
            }
          }
        }
      }
    }
  }
}
