{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://passfy.com/schemas/header-footer.schema.json",
  "title": "Header/Footer Configuration Schema",
  "description": "Defines header and footer layout for body pages",
  "type": "object",
  "required": ["version", "page", "fonts", "header", "footer"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the configuration"
    },
    "page": {
      "type": "object",
      "required": ["width", "height", "unit"],
      "properties": {
        "width": {
          "type": "number",
          "minimum": 0
        },
        "height": {
          "type": "number",
          "minimum": 0
        },
        "unit": {
          "type": "string",
          "enum": ["point", "inch", "mm"]
        },
        "margins": {
          "type": "object",
          "properties": {
            "top": { "type": "number" },
            "bottom": { "type": "number" },
            "left": { "type": "number" },
            "right": { "type": "number" }
          }
        }
      }
    },
    "fonts": {
      "type": "object",
      "required": ["regular", "bold"],
      "properties": {
        "regular": {
          "type": "string"
        },
        "bold": {
          "type": "string"
        }
      }
    },
    "header": {
      "type": "object",
      "required": ["y_position", "height", "rows"],
      "properties": {
        "y_position": {
          "type": "number"
        },
        "height": {
          "type": "number"
        },
        "rows": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "height": {
                "oneOf": [
                  { "type": "number" },
                  { "type": "string" }
                ]
              },
              "columns": {
                "type": "array",
                "items": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "footer": {
      "type": "object",
      "required": ["y_position", "separator_line", "content"],
      "properties": {
        "y_position": {
          "type": "number"
        },
        "separator_line": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "y_position": { "type": "number" },
            "margin_left": { "type": "number" },
            "margin_right": { "type": "number" },
            "color": { 
              "oneOf": [
                { "type": "string" },
                { "type": "object" }
              ]
            },
            "thickness": { "type": "number" }
          }
        },
        "content": {
          "type": "object",
          "properties": {
            "elements": {
              "type": "array",
              "items": { "type": "object" }
            }
          }
        }
      }
    }
  }
}
