{
  "$schema": "./schema/header-footer.schema.json",
  "version": "1.0.0",
  "page": {
    "width": 612,
    "height": 792,
    "unit": "point",
    "margins": {
      "top": 142,
      "bottom": 99,
      "left": 71,
      "right": 71
    }
  },
  "fonts": {
    "regular": "fonts/Inter-Regular.ttf",
    "bold": "fonts/Inter-Bold.ttf"
  },
  "header": {
    "y_position": 660,
    "height": 100,
    "rows": [
      {
        "height": "auto",
        "columns": [
          {
            "id": "company_logo",
            "type": "image",
            "source": "{{document.brand.logoUrl}}",
            "width": 97,
            "align": "center"
          },
          {
            "type": "container",
            "width": 307,
            "rows": [
              {
                "id": "doc_title_label",
                "type": "text",
                "text": "Título del documento:",
                "height": 12,
                "text_size": 7,
                "align": "left",
                "border_bottom": false
              },
              {
                "id": "doc_title_value",
                "type": "text",
                "source": "{{document.title}}",
                "height": 25,
                "text_size": 11,
                "align": "center",
                "border_top": false
              },
              {
                "type": "columns",
                "height": 20,
                "columns": [
                  {
                    "id": "doc_code_label",
                    "type": "text",
                    "text": "Código:",
                    "width": 44,
                    "text_size": 7,
                    "align": "left",
                    "border_right": false
                  },
                  {
                    "id": "doc_code_value",
                    "type": "text",
                    "source": "{{document.code}}",
                    "width": 263,
                    "text_size": 9,
                    "align": "center",
                    "border_left": false
                  }
                ]
              }
            ]
          },
          {
            "id": "qr_code",
            "type": "image",
            "source": "{{document.qr.baseUrl}}{{document.code}}{{document.semanticVersion}}",
            "width": 66,
            "align": "center"
          }
        ]
      },
      {
        "height": 14,
        "columns": [
          {
            "id": "area_label",
            "type": "text",
            "text": "Área:",
            "width": 49,
            "text_size": 7,
            "align": "left",
            "border_right": false
          },
          {
            "id": "area_code",
            "type": "text",
            "source": "{{context.areaCode}}",
            "width": 34,
            "text_size": 7,
            "align": "center",
            "border_left": false,
            "border_right": false
          },
          {
            "id": "area_name",
            "type": "text",
            "source": "{{context.areaName}}",
            "width": 250,
            "text_size": 7,
            "align": "left",
            "border_left": false,
            "border_right": false
          },
          {
            "id": "classification_label",
            "type": "text",
            "text": "Classification:",
            "width": 71,
            "text_size": 7,
            "align": "left",
            "border_right": false
          },
          {
            "id": "confidentiality_name",
            "type": "text",
            "source": "{{context.classificationName}}",
            "width": 66,
            "text_size": 7,
            "align": "right",
            "border_left": false
          }
        ]
      },
      {
        "height": 14,
        "columns": [
          {
            "id": "criticality_label",
            "type": "text",
            "text": "Criticidad:",
            "width": 49,
            "text_size": 7,
            "align": "left",
            "border_right": false
          },
          {
            "id": "criticality_code",
            "type": "text",
            "source": "{{context.criticalityCode}}",
            "width": 34,
            "text_size": 7,
            "align": "left",
            "border_left": false,
            "border_right": false
          },
          {
            "id": "criticality_name",
            "type": "text",
            "source": "{{context.criticalityName}}",
            "width": 58,
            "text_size": 7,
            "align": "left",
            "border_left": false
          },
          {
            "id": "version_label",
            "type": "text",
            "text": "Versión:",
            "width": 42,
            "text_size": 7,
            "align": "left",
            "border_right": false
          },
          {
            "id": "semantic_version",
            "type": "text",
            "source": "{{document.semanticVersion}}",
            "width": 57,
            "text_size": 7,
            "align": "left",
            "border_left": false,
            "border_right": false
          },
          {
            "id": "final_phase",
            "type": "text",
            "source": "{{context.destinationPhase}}",
            "width": 93,
            "text_size": 7,
            "align": "left",
            "border_left": false
          },
          {
            "id": "publication_date_label",
            "type": "text",
            "text": "Fecha Pub:",
            "width": 71,
            "text_size": 7,
            "align": "left",
            "border_right": false
          },
          {
            "id": "publication_date",
            "type": "text",
            "source": "{{document.publicationDate}}",
            "width": 66,
            "text_size": 7,
            "align": "right",
            "border_left": false
          }
        ]
      },
      {
        "height": 15,
        "columns": [
          {
            "id": "type_label",
            "type": "text",
            "text": "Tipo:",
            "width": 49,
            "text_size": 7,
            "align": "left",
            "border_right": false
          },
          {
            "id": "type_code",
            "type": "text",
            "source": "{{context.typeCode}}",
            "width": 34,
            "text_size": 7,
            "align": "left",
            "border_left": false,
            "border_right": false
          },
          {
            "id": "type_name",
            "type": "text",
            "source": "{{context.typeName}}",
            "width": 58,
            "text_size": 7,
            "align": "left",
            "border_left": false
          },
          {
            "id": "phase_label",
            "type": "text",
            "text": "Etapa:",
            "width": 42,
            "text_size": 7,
            "align": "left",
            "border_right": false
          },
          {
            "id": "current_phase",
            "type": "text",
            "source": "{{context.currentPhase}}",
            "width": 57,
            "text_size": 7,
            "align": "left",
            "border_left": false,
            "border_right": false
          },
          {
            "id": "status_current_phase",
            "type": "text",
            "source": "{{context.statuscurrentPhase}}",
            "width": 59,
            "text_size": 7,
            "align": "left",
            "border_left": false,
            "border_right": false
          },
          {
            "id": "correlative_current_phase",
            "type": "text",
            "source": "{{context.correlativocurrentPhase}}",
            "width": 34,
            "text_size": 7,
            "align": "left",
            "border_left": false
          },
          {
            "id": "state_label",
            "type": "text",
            "text": "Estado:",
            "width": 71,
            "text_size": 7,
            "align": "left"
          },
          {
            "id": "stage_phase",
            "type": "text",
            "source": "{{context.stagePhase}}",
            "width": 66,
            "text_size": 7,
            "align": "right"
          }
        ]
      }
    ]
  },
  "footer": {
    "y_position": 70,
    "separator_line": {
      "enabled": true,
      "y_position": 84,
      "margin_left": 50,
      "margin_right": 50,
      "color": "blue",
      "thickness": 1
    },
    "content": {
      "margin_left": 150,
      "margin_right": 150,
      "text_size": 7,
      "align": "center",
      "text_wrap": "wrap",
      "elements": [
        {
          "source": "{{document.code}}"
        },
        {
          "text": "-"
        },
        {
          "source": "{{document.semanticVersion}}"
        },
        {
          "text": "-"
        },
        {
          "source": "{{context.currentPhase}}"
        },
        {
          "text": "-"
        },
        {
          "source": "{{context.correlativocurrentPhase}}"
        },
        {
          "text": " | "
        },
        {
          "source": "{{document.title}}"
        },
        {
          "text": " | "
        },
        {
          "source": "{{document.semanticVersion}}"
        },
        {
          "text": " | "
        },
        {
          "source": "{{context.stagePhase}}"
        },
        {
          "text": " Fecha: "
        },
        {
          "source": "{{document.publicationDate}}"
        },
        {
          "text": " | "
        },
        {
          "text": "Clasificación: "
        },
        {
          "source": "{{context.classificationName}}"
        },
        {
          "text": " | "
        },
        {
          "text": "Página {v} de {h}"
        },
        {
          "text": " | "
        },
        {
          "text": "Hash: …"
        },
        {
          "source": "{{document.security.hashSha256}}"
        }
      ]
    }
  }
}
