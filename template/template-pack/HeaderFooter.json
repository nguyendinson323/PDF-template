{
  "$schema": "./schema/header-footer.schema.json",
  "version": "1.0.0",
  "page": {
    "width": 612,
    "height": 792,
    "unit": "point",
    "margins": {
      "top": 142,
      "bottom": 99,
      "left": 71,
      "right": 71
    }
  },
  "fonts": {
    "regular": "fonts/Inter-Regular.ttf",
    "bold": "fonts/Inter-Bold.ttf"
  },
  "header": {
    "enabled": true,
    "height": 46,
    "margin_bottom": 10,
    "border": {
      "bottom": true,
      "width": 1,
      "color": "#000000"
    },
    "content": {
      "type": "composite",
      "text_size": 9,
      "align": "center",
      "wrap": true,
      "color": "#000000",
      "elements": [
        {
          "source": "{{document.code}}"
        },
        {
          "text": "-"
        },
        {
          "source": "{{document.semanticVersion}}"
        },
        {
          "text": "-"
        },
        {
          "source": "{{context.currentPhase}}"
        },
        {
          "text": "-"
        },
        {
          "source": "{{context.correlativocurrentPhase}}"
        },
        {
          "text": " | "
        },
        {
          "source": "{{document.title}}"
        },
        {
          "text": " | "
        },
        {
          "source": "{{document.semanticVersion}}"
        },
        {
          "text": " | "
        },
        {
          "source": "{{context.stagePhase}}"
        },
        {
          "text": "\n"
        },
        {
          "text": "Fecha: "
        },
        {
          "source": "{{document.publicationDate}}"
        },
        {
          "text": " | "
        },
        {
          "text": "Clasificación: "
        },
        {
          "source": "{{context.classificationName}}"
        },
        {
          "text": " | "
        },
        {
          "text": "Página {{pageNumber}} de {{totalPages}}"
        },
        {
          "text": " | "
        },
        {
          "text": "Hash: …"
        },
        {
          "source": "{{document.security.hashSha256Short}}"
        }
      ]
    }
  },
  "footer": {
    "enabled": true,
    "height": 46,
    "margin_top": 10,
    "border": {
      "enabled": false
    },
    "separator_line": {
      "enabled": true,
      "x1": 82,
      "y1": 84,
      "x2": 535,
      "y2": 84,
      "color": "blue",
      "thickness": 1
    },
    "content": {
      "type": "composite",
      "text_size": 9,
      "align": "center",
      "wrap": true,
      "color": "#000000",
      "elements": [
        {
          "source": "{{document.code}}"
        },
        {
          "text": "-"
        },
        {
          "source": "{{document.semanticVersion}}"
        },
        {
          "text": "-"
        },
        {
          "source": "{{context.currentPhase}}"
        },
        {
          "text": "-"
        },
        {
          "source": "{{context.correlativocurrentPhase}}"
        },
        {
          "text": " | "
        },
        {
          "source": "{{document.title}}"
        },
        {
          "text": " | "
        },
        {
          "source": "{{document.semanticVersion}}"
        },
        {
          "text": " | "
        },
        {
          "source": "{{context.stagePhase}}"
        },
        {
          "text": "\n"
        },
        {
          "text": "Fecha: "
        },
        {
          "source": "{{document.publicationDate}}"
        },
        {
          "text": " | "
        },
        {
          "text": "Clasificación: "
        },
        {
          "source": "{{context.classificationName}}"
        },
        {
          "text": " | "
        },
        {
          "text": "Página {{pageNumber}} de {{totalPages}}"
        },
        {
          "text": " | "
        },
        {
          "text": "Hash: …"
        },
        {
          "source": "{{document.security.hashSha256}}"
        }
      ]
    }
  }
}