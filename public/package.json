{
  "name": "document-control-microservice",
  "version": "1.0.0",
  "description": "Stateless microservice for document publication and compliance stamping with RFC 3161 TSA and AWS S3 integration",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.js'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "validate-env": "node src/utils/validate-env.js",
    "docker:build": "docker build -t document-control-microservice .",
    "docker:run": "docker-compose up"
  },
  "keywords": [
    "pdf",
    "document-control",
    "tsa",
    "rfc3161",
    "pades",
    "aws-s3",
    "compliance",
    "microservice"
  ],
  "author": "Passfy Document Control Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/client-kms": "^3.478.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "prom-client": "^15.1.0",
    "pdf-lib": "^1.17.1",
    "@pdf-lib/fontkit": "^1.1.1",
    "qrcode": "^1.5.3",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "node-rsa": "^1.1.1",
    "node-forge": "^1.3.1",
    "asn1js": "^3.0.5",
    "pkijs": "^3.0.15"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "@types/jest": "^29.5.11"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
