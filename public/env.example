# Networking
PORT=
NODE_ENV=production

# Auth (choose one model)
AUTH_MODE=jwt|mtls
COGNITO_ISSUER=
COGNITO_JWKS_URI=
COGNITO_TOKEN_URL=
COGNITO_CLIENT_ID=
COGNITO_CLIENT_SECRET=
REQUIRED_SCOPES=publish:doc,publish:chk,publish:audit,jobs:read,verify:read,metrics:read,health:read

# mTLS (if selected)
MTLS_CA_BUNDLE_PATH=
MTLS_CLIENT_CERT_PATH=
MTLS_CLIENT_KEY_PATH=

# AWS
AWS_REGION=
S3_BUCKET=
S3_PREFIX=publish/
KMS_KEY_ARN=
S3_OBJECT_LOCK_MODE=GOVERNANCE|COMPLIANCE
S3_OBJECT_LOCK_RETENTION_DAYS=

# TSA
TSA_URL_SANDBOX=
TSA_URL_PROD=
TSA_AUTH_MODE=none|basic|oauth|mtls
TSA_USER=
TSA_PASS=
TSA_POLICY_OID=
TSA_HASH_ALG=SHA-256
TSA_TIMEOUT_MS=4000
TSA_RETRIES=2

# Templates
TEMPLATE_ROOT=/app/templates
TEMPLATE_MANIFEST=Manifest.json
TEMPLATE_HEADERFOOTER=HeaderFooter.json
TEMPLATE_VARS=var_cover.json
TEMPLATE_GENERATOR=generate-golden.js
FONTS_DIR=fonts

# Service behavior
IDEMPOTENCY_TTL_SECONDS=86400
MAX_INPUT_SIZE_MB=15
PDFA_LEVEL=2b
